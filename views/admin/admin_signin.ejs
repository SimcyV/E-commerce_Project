<!-- Your signup form and other content -->

    <!-- Login Register -->
    <div class="container-fluid row">
        <div class="col-12 col-md-5 m-auto py-5">
            <div class="card p-4">
                <h2 class="text-center"> ADMIN SIGNIN</h2>
                <form action="/admin" method="post" class="px-lg-5">
                    <label for="email" class="form-group">Email address</label>
                    <input type="email" name="email" value="admin@gmail.com" class="form-control border-dark" required>
                    <label for="password"  class="form-group">Password</label>
                    <input type="password" name="password" value="abcd123"  class="form-control border-dark" required>

                    <% if (messages.success) { %>
                        <div class="alert alert-success">
                            <%= messages.success %>
                        </div>
                        <% } else if (messages.error) { %>
                            <div class="alert alert-danger">
                                <%= messages.error %>
                            </div>
                            <%}%>
                                <div class="text-center py-3">
                                    <input type="submit" class="btn btn-outline-dark px-5">
                                    <!-- <br><a href="/forgotPwd">Forgot Password</a> -->
                                </div>
                </form>
          
            </div>
        </div>
    </div>


