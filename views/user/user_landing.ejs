<%- include('../partials/landing_header') %>




    <div class="container-fluid py-3">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid" style="height: 450px;"
                        src="https://www.vedantcomputers.com/image/cache/catalog/vc/slider/1320x600-Intel-14-min-1320x600.jpg"
                        alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" style="height: 450px;"
                        src="https://www.vedantcomputers.com/image/cache/catalog/vc/slider/1320x600-MSI-Paytm-min-1320x600.jpg"
                        alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 img-fluid" style="height: 450px;"
                        src="https://www.vedantcomputers.com/image/cache/catalog/vc/slider/1320x600-Alalwake2-min-1320x600.jpg"
                        alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- BRANDS -->
    <div class="brands">
        <h3 class="text-center">Browse Popular Brands</h3>
        <hr>
       <!-- BRAND CAROUSEL -->
        <div class="row m-0">
            <% if (products.length>0) { %>
                <% products.forEach(x => { %>
                    <% if (x.stock>0 && x.display==="Active" && x.brand.status==="Active" && x.category.status==="Active") { %>
                        <div class="col-lg-3 col-md-4 col-sm-6 col-12 my-3">
                            <div class="p-3 text-center rounded" style="box-shadow: 0 0 4px rgba(0, 0, 0, 0.508);">
                                <a href="/userProductDetails/<%= x._id %>" style="text-decoration: none; color: unset;">
                                    <img src="/uploads/<%= x.images[0] %>" class="img-fluid" alt="No preview" style="height: 200px;">
                                    <div class="d-flex justify-content-between">
                                        <p class="font-weight-bold text-left" style="white-space: nowrap; width: 70%; overflow: hidden; text-overflow: ellipsis;"><%= x.name %></p>
                                        <div class="d-flex">
                                            <p class="font-weight-bold small text-danger"><del>₹<%= x.price %></del>&nbsp;</p>
                                            <p class="font-weight-bold text-success">₹<%= x.price-x.discount %></p>
                                        </div>
                                    </div>
                                </a>
                                <div class="d-flex justify-content-between p-0">
                                    <a class="btn btn-outline-secondary">Add to Cart</a>
                                    <a class="btn"><i class="fa-solid fa-heart text-danger h4"></i></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            <% } %>
        </div>


    <%- include('../partials/footer') %>