<%- include('../partials/header') %>





    <!-- Login Register -->
    <div class="container-fluid row">
        <div class="col-12 col-md-5 py-5 mx-auto">
            <div class="card p-4">
                <h2 class="text-center">SIGNIN</h2>
                <form action="/signin" method="post" class="px-md-5">
                    <div class="form-group">
                        <label for="email" class="form-group">Email address</label>
                        <input type="email" name="email"  value="ria@gmail.com" class="form-control border-dark" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-group">Password</label>
                        <input type="password" name="password"  value="simcy123#" class="form-control border-dark" required>
                    </div>

                    <% if (messages.success) { %>
                        <div class="alert alert-success">
                            <%= messages.success %>
                        </div>
                    <% } else if (messages.error) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>

                    <%}%>
                    <div class="text-center py-3">
                        <input type="submit" class="btn btn-outline-dark px-5">
                        <br><a href="/forgotPwd">Forgot Password</a>
                    </div>
                </form>
                <hr>
                <div class="  align-items-center d-flex justify-content-between">
                    <a href="/auth/google"><img src="/assests/images/icons8-google-48.png" style="width: auto; height: 42px;" alt="google" /></a>
                    <a href="/signup" class="btn btn-outline-dark">CREATE NEW ACCOUNT</a>
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    </body>

    </html>



