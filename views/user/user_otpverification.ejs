<%- include('../partials/header') %>



<!--Register -->
  <div class="container">
    <div class="box d-flex align-items-center justify-content-center px-md-5 m-auto py-5">
        <div class="card p-4">
          <br><br>
        <h2 class="text-center">OTP VERIFICATION</h2>
        <form action="/otpverify" method="post" class="">
        
            <label for="email" class="form-group">OTP</label>
            <input type="number" name="otp" placeholder="Type OTP" class="form-control border-dark" required>
          <p>Please enter the OTP above that recieved in your registered email</p>
            <% if (messages.success) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% }else if (messages.error){ %>
              <div class="alert alert-danger">
                <%= messages.error %>
            </div>
            <%}%>
            <div class="text-center py-3">
                <input type="submit" class="btn btn-outline-success px-5">
                <a href="/otpResend" class="btn btn-outline-danger px-5">Resend</a>
            </div>
        </form>
        <br><br>
        
    </div>
  </div>
</div>
<!-- end-->



